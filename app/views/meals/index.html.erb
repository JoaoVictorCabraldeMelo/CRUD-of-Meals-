<h1>Meals</h1>

<table>
    <%@meals.each do |meal|%>
    <tr>
        <td><%= link_to meal.name, meal_path(meal) %></td>
        <td> <%= button_to 'Edit', edit_meal_path(meal), method: 'get'%></td>
        <td> <%= button_to 'Remove', meal_path(meal), method: 'delete', data: {confirm:"Are you sure?"} %> </td>
    </tr>
    <% end %>
</table>

<%= link_to "Add a New Meal", new_meal_path %>
